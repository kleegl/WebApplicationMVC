@model EmployeeAndCompanyMVC.Models.Company;

<!DOCTYPE html>
<html>
<head>
    <title>Edit</title>
</head>
<body>
    <h2>Edit Company Page</h2>
    <form asp-controller="Company" asp-action="Edit" method="post">

        <label asp-for="Name"></label>
        <input type="text" name="Name" value=@Model.Name />
        <br />

        <label asp-for="Country"></label>
        <input type="text" name="Country" value=@Model.Country />
        <br />

        <input type="submit" name="Редактировать"/>
    </form>
</body>
</html>