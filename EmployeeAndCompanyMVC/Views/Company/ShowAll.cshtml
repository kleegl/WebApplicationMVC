@model IEnumerable<Company>

<!DOCTYPE html>
<html>
<head>
    <title>Show All</title>
</head>
<body>
    <h2>Show All Companies Page</h2>
    
    <table>
        <tr>
            @*<th>Id</th>*@
            <th>Name</th>
            <th>Country</th>
        </tr>
        @foreach (var company in Model)
        {
            <tr>
                @*<td>@company.Id</td>*@
                <td>@company.Name</td>
                <td>@company.Country</td>
                <td><a asp-controller="Company" asp-action="Edit" asp-route-id="@company.Id">Edit</a></td>
                <td><a asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id">Delete</a></td>
            </tr>
        }
    </table>
</body>
</html>